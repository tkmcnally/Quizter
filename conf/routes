# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Splash page for application
GET     /                           controllers.WebController.index()

# API Route to login/register user
POST	/api/android/get-profile	    controllers.ProfileController.getProfile()

# API Route for loading a list of questions
POST	/api/android/facebook/loadquestions	    controllers.ProfileController.loadQuestions()

# API Route to update user's questions
POST	/api/android/facebook/questions	    controllers.ProfileController.updateQuestions()

# API Route for retrieving a user's leaderboard
POST	/api/android/facebook/leaderboard	controllers.LeaderboardController.loadLeaderboard()

#
POST	/api/android/facebook/fetchplayer	controllers.QuizController.fetchPlayer()

#asda
POST  /api/android/facebook/getplayersquestions controllers.QuizController.getQuestionsForQuiz()

POST /api/android/facebook/submitquiz controllers.QuizController.submitQuiz()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)


